{% extends 'base.html.twig' %}

{% block title %}Semestre index{% endblock %}

{% block body %}
    <h1>Semestre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Formation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for semestre in semestres %}
            <tr>
                <td>{{ semestre.id }}</td>
                <td>{{ semestre.semestre }}</td>
                <td>{{ semestre.formation }}</td>
                <td>
                    <a href="{{ path('app_semestre_show_cours', {'id': semestre.id}) }}">List des cours</a>
                    <a href="{{ path('app_semestre_edit', {'id': semestre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cours_new') }}">Create new</a>
{% endblock %}
