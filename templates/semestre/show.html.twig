{% extends 'base.html.twig' %}

{% block title %}Semestre {{ semestre.semestre }} {% endblock %}

{% block body %}
    <h1>cours du Semestre {{ semestre.semestre }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Semestre</th>
                <th>Nom</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cour in cours %}
            <tr>
                <td>{{ cour.id }}</td>
                <td>{{ cour.semestre }}</td>
                <td>{{ cour.nom }}</td>
                <td>{{ cour.description }}</td>
                <td>
                    <a href="{{ path('app_cours_show', {'id': cour.id}) }}">show</a>
                    <a href="{{ path('app_cours_edit', {'id': cour.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>

    <a href="{{ path('app_cours_index') }}">back to list</a>
{% endblock %}